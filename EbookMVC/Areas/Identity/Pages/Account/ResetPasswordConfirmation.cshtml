@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Xác nhận đặt lại mật khẩu";
}

<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header">
            <a href="@Url.Action("Index", "Home")" class="link-dark text-center link-offset-2 link-opacity-100 link-opacity-50-hover">
                <h1 class="mb-0"><b>E</b>learn</h1>
            </a>
        </div>
        <div class="card-body login-card-body">
            <div class="text-center">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
            </div>
            <p class="text-center mt-3">
                <strong>Mật khẩu của bạn đã được đặt lại thành công!</strong>
            </p>
            <p class="text-center">
                Bạn có thể đăng nhập bằng mật khẩu mới.
            </p>
            <p class="mb-1 mt-3 text-center">
                <a href="@Url.Page("./Login")" class="btn btn-primary">Đăng nhập ngay</a>
            </p>
        </div>
    </div>
</div>
